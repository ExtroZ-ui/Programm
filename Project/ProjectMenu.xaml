        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="ProjectMenu" Height="{Binding SystemParameters.PrimaryScreenHeight}" Width="{Binding SystemParameters.PrimaryScreenWidth}" WindowStartupLocation="CenterScreen" WindowState="Maximized" >
