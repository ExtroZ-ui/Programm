        <Grid>
            <Border BorderBrush="Black" BorderThickness="2" Width="500" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Fill="#FF9AD853"/>
            </Border>

            <Button x:Name="Back" Content="Назад" FontSize="16" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Margin="457,466,764,208" Click="Back_Click" />
            <Button Content="О программе" FontSize="16" Width="140" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Margin="591,466,590,208" />


        </Grid>
    </Viewbox>
</Window>
